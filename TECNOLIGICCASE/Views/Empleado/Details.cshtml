        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sueldo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sueldo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaModificacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaModificacion)
        </dd>
        <dt class="col-sm-2">
            Antigüedad
        </dt>
        <dd class="col-sm-10">
            @Model.Antiguedad
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdEmpleado" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i>Editar</a>
    <a asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-arrow-return-left"></i>Regresar</a>
</div>

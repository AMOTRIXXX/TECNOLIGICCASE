@model TECNOLIGICCASE.Models.Empleado

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles Empleado</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoDocumento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoDocumento)
        </dd>
        <!-- Agregar el bloque para mostrar la descripción del cargo -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oCargo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oCargo.Descripcion)
        </dd>
